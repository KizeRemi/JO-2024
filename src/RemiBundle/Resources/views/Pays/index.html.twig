{% extends 'RemiBundle::base.html.twig' %}
{% block title %}{{ 'countries.list'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'countries.list'|trans }}</h1>
    <table border=1>
        <thead>
            <tr>
                <th>{{ 'tab.header.name'|trans }}</th>
                <th>{{ 'tab.header.flag'|trans }}</th>
                <th>{{ 'tab.header.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for pays in tousLesPays %}
            <tr>
                <td>{{ pays.nom }}</td> 
                <td><img src="{{ asset('uploads/drapeaux/'~ pays.drapeau) }}" /></td>
                <td>
                    <a href="{{ path('remi_pays_delete', { 'id' : pays.id } )}}">
                        <button>{{ 'form.button.delete'|trans }}</button>
                    </a>
                    <a href="{{ path('remi_pays_show', { 'id' : pays.id } )}}">
                        <button>{{ 'form.button.update'|trans }}</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br>
    <div>
    {{ form_start(form) }}
    {{ form_end(form) }}
    </div>
{% endblock %}